@model eNompilo.v3._0._1.Models.GBV.ReportGBV
@using eNompilo.v3._0._1.Constants;
@inject IHttpContextAccessor contextAccessor

@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="margined-page pt-4">
<h2>Report GBV Now</h2>
<hr />
<div class="row align-items-center">
    <div class="col-md-4" style="margin-left:auto;margin-right:auto;">
        <form asp-action="report">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4" hidden>
                <label asp-for="PatientId" class="control-label"></label>
                <input asp-for="PatientId" class="form-control" value="@contextAccessor.HttpContext.Session.GetInt32("PatientId")" />
            </div>
            <div class="form-group mb-4" hidden>
                <label asp-for="PatientFileId" class="control-label"></label>
                <input asp-for="PatientFileId" class="form-control" value="@contextAccessor.HttpContext.Session.GetInt32("PatientFileId")" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<Role>()">
                    <option disabled selected hidden>Please select an option</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="IdentityType" class="control-label"></label>
                <select asp-for="IdentityType" class="form-control" asp-items="Html.GetEnumSelectList<IdentityType>()">
                    <option disabled selected hidden>Please select an option</option>
                </select>
                <span asp-validation-for="IdentityType" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="IncidentType" class="control-label"></label>
                <select asp-for="IncidentType" class="form-control" asp-items="Html.GetEnumSelectList<IncidentType>()">
                    <option disabled selected hidden>Please select an option</option>
                </select>
                <span asp-validation-for="IncidentType" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="CommunicationType" class="control-label"></label>
                <select asp-for="CommunicationType" class="form-control" asp-items="Html.GetEnumSelectList<CommunicationType>()">
                    <option disabled selected hidden>Please select an option</option>
                </select>
                <span asp-validation-for="CommunicationType" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="CounsellingBooking" class="control-label"></label>
                <select asp-for="CounsellingBooking" class="form-control" asp-items="Html.GetEnumSelectList<CounsellingBooking>()">
                    <option disabled selected hidden>Please select an option</option>
                </select>
                <span asp-validation-for="CounsellingBooking" class="text-danger"></span>
            </div>
                <span class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmBookingModal">Report Case</span>

                <div class="modal fade" id="confirmBookingModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="text-danger">Confirm </h5>
                            </div>
                            <div class="modal-body">
                                <p>
                                    Are you sure want to report a case?
                                </p>
                            </div>
                            <div class="modal-footer">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                                <span class="btn btn-secondary" data-bs-dismiss="modal">Close</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                </div>
        </form>
        </div>
        </div>
	</div>

	<div>
		<a asp-controller="Home" asp-action="Index">Back to Home</a>
	</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
    </script>


            
            

}

