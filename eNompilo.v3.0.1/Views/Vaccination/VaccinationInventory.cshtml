@using eNompilo.v3._0._1.Constants;
@model eNompilo.v3._0._1.Models.Vaccination.VaccinationInventory

@{
    ViewData["Title"] = "Vax Inventory";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="margined-page">
    <div class="row">
        <h2>Add to the vaccine inventory</h2>
        <hr />
        <div class="col-md-4" style="margin-left:auto;margin-right:auto;">
            
            <form method="post" asp-action="VaccinationInventory">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="Diseases" class="control-label"></label>
                    <select asp-for="Diseases" class="form-control" asp-items="Html.GetEnumSelectList<VaccinableDiseases>()">
                        <option disabled selected hidden>Please select an option</option>
                    </select>
                    <span asp-validation-for="Diseases" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="BatchNo" class="control-label"></label>
                    <input asp-for="BatchNo" class="form-control" />
                    <span asp-validation-for="BatchNo" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Manufacturer" class="control-label"></label>
                    <input asp-for="Manufacturer" class="form-control" />
                    <span asp-validation-for="Manufacturer" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="VaccineName" class="control-label"></label>
                    <input asp-for="VaccineName" class="form-control" />
                    <span asp-validation-for="VaccineName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ExpirationDate" class="control-label"></label>
                    <input asp-for="ExpirationDate" class="form-control" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <input type="submit" value="Add Vaccine" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
