@model eNompilo.v3._0._1.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<a asp-action="Index" asp-controller="Home" style="display:flex;align-items: center; text-decoration:none; color: #1e36cc; font-weight: 500;"><i class="bi bi-arrow-left-square-fill" style="color: #1e36cc; font-size:25px;"></i> &nbsp; <span>Back to Home</span></a>
<div class="row">
    <form id="account" method="post" class="p-5">
        <h1 class="text-center" style="color: #2036d9;"><strong>Log in</strong></h1>
        <br />
        <div class="form-group mb-4">
            <label asp-for="IdNumber" class="form-label"></label>
            <input asp-for="IdNumber" required class="form-control" autocomplete="username" aria-required="true" placeholder="Enter ID Number" />
            <span asp-validation-for="IdNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="Password" class="form-label"></label>
			<input asp-for="Password" required class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter Your Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            <div class="checkbox">
                <label asp-for="RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <div form-group py-2 mt-3>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg" style="background-color: #1e36cc; color:#ced4f8;">Log in</button>
        </div>
        <div>
            @*<p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>*@
            <p>
                <a asp-controller="Register" asp-action="Patient">Register as a new user</a>
            </p>
            @*<p>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>*@
        </div>
        <div asp-validation-summary="ModelOnly" class="badge bg-danger text-wrap list-group-item"></div>
    </form>
