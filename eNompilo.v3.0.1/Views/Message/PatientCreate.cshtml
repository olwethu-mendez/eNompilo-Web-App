@model eNompilo.v3._0._1.Models.Message.ReplayViewModel;

@{
    ViewData["Title"] = "Create Replay";
    Layout = "_DashboardLayout";
}



<div class="card-container" style="display:flex;justify-content:center">
    @*  <div class="card login-logout-card" style="width:25%;border-radius:40px;"> *@
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-10 my-4">
                <div class="row">
                    <div class="col-12">
                        <section>

                            <div class="margined-page pt-4" style="margin-left:auto;margin-right:auto;">

                                <p> Sender: @Model.SenderUser .</p>
                                <hr />
                                <p> Subject: @Model.Content .</p>
                                <hr />
                                @if (Model.PreviousReplies != null && Model.PreviousReplies.Any())
                                {
                                    <div class="previous-replies">
                                        <h3>Previous Replies:</h3>
                                        <ul>
                                            @foreach (var reply in Model.PreviousReplies)
                                            {
                                                <li> @reply.Sender : @reply.ReplayMessage</li>
                                            }
                                        </ul>
                                    </div>
                                }


                                <form asp-action="PatientCreate" asp-controller="Message" method="post">
                                    <input type="hidden" asp-for="MessageId" value="@Model.MessageId" />
                                    <div class="form-group">
                                        <label asp-for="ReplayMessage" class="control-label">Replay Message:</label>
                                        <textarea asp-for="ReplayMessage" class="form-control" rows="4"></textarea>
                                        <span asp-validation-for="ReplayMessage" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Submit" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* </div> *@
</div>

