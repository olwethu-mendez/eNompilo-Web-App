@model eNompilo.v3._0._1.Models.Family_Planning.FamilyPRecord

@{
    ViewBag.Title = "Edit Family Planning Record";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Discontinue Family Planning Record</h2>

            <form asp-action="FPRecord" asp-controller="Family" >
                @Html.AntiForgeryToken()

                
                <p class="text-danger">
                     The patient has choosen to stop taking the contraceptive.
                </p>

                <button type="submit" class="btn btn-primary">Discontinue</button>
            </form>
        </div>
    </div>
</div>
