@{
    Layout = "_DashboardLayout";
}
@model eNompilo.v3._0._1.Models.SystemUsers.ApplicationUser;
@inject IHttpContextAccessor contextAccessor;
@using eNompilo.v3._0._1.Models.Family_Planning;


<div class="card-container" style="display:flex;justify-content:center">
    @*  <div class="card login-logout-card" style="width:25%;border-radius:40px;"> *@
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-10 my-4">
                <div class="row">
                    <div class="col-12">
                        <section>
                            <div class="card-img" style="text-align:center; padding-top:20px">
                                <a asp-controller="Home" asp-action="Index"><img src="~/img/Adobe_Express_20230527_0911500_1[4494].png" style="width:150px;" class="auth-image" /></a>
                            </div>
                            <div style=" height: 10px;"></div>
                            <form asp-action="RecommendContraceptive" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating">
                                    <h1>Your Doctor details</h1>

                                    <dl>
                                        <dt>Email:</dt>
                                        <dd>@Model.Email</dd>

                                        <dt>First Name:</dt>
                                        <dd>@Model.FirstName</dd>

                                        <dt>Last Name:</dt>
                                        <dd>@Model.LastName</dd>

                                        

                                        <dt>Phone Number:</dt>
                                        <dd>@Model.PhoneNumber</dd>
                                    </dl>

                                </div>
                                
                            </form>
                            <br />
                           
                            <div style=" height: 10px;"></div>
                            <div class="text-center">
                                <a asp-action="Index">Back to Booking List</a>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* </div> *@
</div>
