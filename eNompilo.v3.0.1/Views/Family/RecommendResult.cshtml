
@{
    ViewData["Title"] = "RecommendResult";
    Layout = "_DashboardLayout";
}

@model List<eNompilo.v3._0._1.Data.RecommendedContraceptive>
@using eNompilo.v3._0._1.Models.Family_Planning;



<div class="card-container" style="display:flex;justify-content:center">
    @*  <div class="card login-logout-card" style="width:25%;border-radius:40px;"> *@
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-10 my-4">
                <div class="row">
                    <div class="col-12">
                        <section>

                            <div class="margined-page pt-4" style="margin-left:auto;margin-right:auto;">

                                <div>
                                    <h1>Recommended Contraceptives</h1>
                                    <br />
                                    <ul class="list-group list-group-flush">
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <li class="list-group-item">
                                                    <p>@item.Name</p>
                                                </li>
                                            }
                                        }
                                        else
                                        {
                                            <li class="list-group-item">
                                                <p class="text-danger">Would not recommend any contraceptive</p>
                                            </li>
                                        }
                                    </ul>
                                    <div class="text-center">
                                        <a class="btn btn-outline-success" asp-action="Index" asp-controller="Family">Back</a>
                                    </div>
                                </div>
                                <div>

                                    <a asp-action="IndexList">Back to List</a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* </div> *@
</div>

