@model eNompilo.v3._0._1.Models.Family_Planning.FamilyPlanningAppointment

@{
    ViewData["Title"] = "Appointment Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<div class="card-container" style="display:flex;justify-content:center">
    @*  <div class="card login-logout-card" style="width:25%;border-radius:40px;"> *@
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-10 my-4">
                <div class="row">
                    <div class="col-12">
                        <section>

                            <div class="margined-page pt-4" style="margin-left:auto;margin-right:auto;">

                                <h1>Booking Details</h1>

                                <div>
                                    <h4>Family Planning Appointment</h4>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.BookingReasons)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.BookingReasons)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.PreferredDate)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.PreferredDate)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.PreferredTime)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.PreferredTime)
                                        </dd>
                                        <dt class="col-sm-2">
                                           Collection Status
                                        </dt>
                                        <dd class="col-sm-10">
                                            @{
                                                string status = "N/A"; // Default value

                                                if (Model.IsCollected.HasValue)
                                                {
                                                    status = Model.IsCollected.Value ? "Collected" : "Pending";
                                                }

                                                @status
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                <div>
                                    <a asp-action="IndexList">Back to List</a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* </div> *@
</div>


