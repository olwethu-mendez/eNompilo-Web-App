            *@
            @*Third Card*@
            @if (Model.GeneralAppointments.ToList().Count > 0)
            {
                 <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">UPCOMING APPOINTMENTS</h4>
                        <table class="table table-borderless">
                            <thead class="table table-bordered">
                                <tr>
                                    <th class="col-2">Full Name</th>
                                    <th class="col-2">Appointment Date</th>
                                    <th class="col-2">Appointment Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GeneralAppointments)
                                {
                                    <tr>
                                        <td>@item.Patient.FirstName @item.Patient.LastName</td>
                                        <td>@item.PreferredDate.Value.ToString("dd/MMMM/yyyy")</td>
                                        <td>@item.PreferredTime.Value.ToString("HH:mm")</td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
