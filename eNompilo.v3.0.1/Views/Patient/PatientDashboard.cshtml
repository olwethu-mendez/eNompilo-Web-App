                                        </div>
                                    </div>
                                }*@
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                <strong>Medication Prescriptions</strong>
                                <div class="row">
                                    <p>No Record Found to be Retrieved</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @*
            @if (Model.Session.Count > 0)
            {
            <div class="col">
            <div class="card">
