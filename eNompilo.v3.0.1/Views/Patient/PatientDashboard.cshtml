@model eNompilo.v3._0._1.Models.ViewModels.PatientDashboardViewModel;
@inject IHttpContextAccessor contextAccessor;

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="margined-page pt-4">
    <h1>Patient Dashboard</h1>

    <div class="d-flex justify-content-evenly">
        <div class="page-content page-container" id="page-content">
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title">PATIENT HEALTH HISTORY</h4>
                    <table class="table table-borderless">
                        <thead class="table table-bordered">
                            <tr>
                                <th>Previous Diagnosis</th>
                                <th>Previous Prescriptions</th>
                                <th>General Allergies</th>
                                <th>Medical Allergies</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.PatientFiles.MedicalHistory.PreviousDiagnoses </td>
                                <td>@Model.PatientFiles.MedicalHistory.PreviousMedication </td>
                                <td>@Model.PatientFiles.MedicalHistory.GeneralAllergies </td>
                                <td>@Model.PatientFiles.MedicalHistory.MedicationAllergies </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            @*Card group*@
            <div class="card-group row d-flex mb-4">
                @if (Model.Medication.ToList().Count > 0)
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                <strong>Medication Prescriptions</strong>
