        <dt class = "col-sm-2 mb-4">
            Issues Faced
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientIssues)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Preferred Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreferredDate)
        </dd>
        <dt class = "col-sm-2 mb-4">
            Preferred Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PreferredTime)
        </dd>
        <dt class = "col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName) @Html.DisplayFor(model => model.Patient.LastName)
        </dd>
