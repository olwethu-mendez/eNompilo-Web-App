@model eNompilo.v3._0._1.Models.GeneralAppointment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="margined-page pt-4">
<div>
    <h2>Your Upcoming Appointment(s)</h2>
    <hr />
